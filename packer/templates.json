        "<enter><wait>",
        "vyos<enter><wait>",
        "vyos<enter><wait>",
        "<enter><wait5>",
        "reboot<enter><wait>",
        "Yes<enter><wait10><wait10><wait10>",
        "vyos<enter><wait>",
        "vyos<enter><wait>",
        "configure<enter><wait>",
        "delete interfaces ethernet eth0<enter><wait>",
        "set service ssh port 22<enter><wait>",
        "commit<enter><wait>",
        "save<enter><wait>",
        "set interfaces ethernet eth0 address dhcp<enter><wait>",
        "commit<enter><wait>",
        "save<enter><wait>",
        "exit<enter><wait>"
