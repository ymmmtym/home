---
apiVersion: helm.cattle.io/v1
kind: HelmChartConfig
metadata:
  name: rke2-cilium
  namespace: kube-system
spec:
  valuesContent: |-
    eni:
      enabled: true
    kubeProxyReplacement: strict
    k8sServiceHost: rke2-server
    k8sServicePort: 6443
    bgp:
      enabled: false
      announce:
        loadbalancerIP: true
        podCIDR: true
    ingressController:
      enabled: true
    hubble:
      enabled: true
      relay:
        enabled: true
      ui:
        enabled: true
